<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../partials/head') %>
</head>
<body>
    <div class="manage-container">
      <%- include('../../partials/slider') %>
      <div class="manage-right">
          <div class="row">
              <div class="col-12"><h3>Danh mục sản phẩm</h3></div>
              <div class="col-md-12 mb-2">
                  <a href="/cartegory/create" class="btn btn-primary float-right">Add</a>
              </div>
              <div class="col-md-12">
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Tên danh mục</th>
                        <th scope="col">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for(let i=0;i<data.length;i++){ %>
                        <tr>
                          <th scope="row" class="col-3"><%= i+1 %></th>
                          <td class="col-5"><%= data[i].name %></td>
                          <td class="col-4 action">
                            <a href="/cartegory/edit/<%=data[i].id %>" class="btn btn-default">Sửa</a>
                            <form action="/cartegory/delete" method="post">
                              <input type="text" name="id" value="<%=data[i].id %>" hidden>
                              <button href="" class="btn btn-danger">Xóa</button>
                            </form>
                          </td>
                        </tr>
                      <% } %>
                    </tbody>
                </table>
              </div>
          </div>
        </div>
    </div>
</body>
</html>